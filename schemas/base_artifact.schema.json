{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://shadowaudit/schemas/base_artifact.schema.json",
  "title": "Base Artifact Schema",
  "description": "Schema defining required fields for any collected artifact in ShadowAudit.",
  "type": "object",
  "required": [
    "host_id",
    "source",
    "collected_at",
    "artifact_type",
    "confidence",
    "evidence_type"
  ],
  "properties": {
    "host_id": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "collected_at": {
      "type": "string",
      "format": "date-time"
    },
    "artifact_type": {
      "type": "string",
      "minLength": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "evidence_type": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
